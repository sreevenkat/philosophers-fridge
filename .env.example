# ==========================================
# Philosophers Fridge - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# AI API Keys (at least one required for nutrition estimation)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Preferred AI provider: 'openai' or 'anthropic'
PREFERRED_AI=openai

# Resend Email Configuration (https://resend.com)
RESEND_API_KEY=re_your_resend_api_key

# Sender email - must be from verified domain in Resend
# For testing: onboarding@resend.dev (only sends to your own email)
# For production: noreply@yourdomain.com
SENDER_EMAIL=onboarding@resend.dev

# Base URL for email links (verification, password reset, invitations)
# Local: http://localhost:8000
# Railway: https://your-app.up.railway.app
# Custom domain: https://fridge.yourdomain.com
BASE_URL=http://localhost:8000

# Session Secret - generate with: openssl rand -hex 32
SESSION_SECRET=generate-a-secure-random-string-here

# Database path (optional - default is ./food_log.db)
# For Railway with volume at /data: /data/food_log.db
# DATABASE_PATH=/data/food_log.db
